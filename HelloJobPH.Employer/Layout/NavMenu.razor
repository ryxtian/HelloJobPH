@inject AuthenticationStateProvider AuthenticationStateProvider
<style>
    .mud-drawer {
        background-color: #1E1E2F; /* Dark navy background */
        color: #fff;
    }

    .mud-drawer-header {
        background-color: #25253A;
        font-weight: 600;
    }

    .mud-nav-link {
        color: #dcdcdc !important;
        border-radius: 8px;
        margin: 2px 6px;
        padding: 10px;
        transition: background-color 0.2s ease;
    }

    .mud-nav-link:hover {
        background-color: rgba(255, 255, 255, 0.1);
    }

    .mud-nav-link.active {
        background-color: #3F51B5;
        color: #fff !important;
    }
</style>

@* --- Navigation Drawer Layout --- *@
<MudDrawer Elevation="4" Class="mud-drawer" Open="true" Anchor="Anchor.Start" ClipMode="DrawerClipMode.Always">
    <MudDrawerHeader Class="mud-drawer-header">
        <MudText Typo="Typo.h6">HelloJobPH</MudText>
    </MudDrawerHeader>

    <MudNavMenu>
        <MudNavLink Href="/dashboard/dashboard" Icon="@Icons.Material.Filled.Dashboard">Dashboard</MudNavLink>
        <MudNavLink Href="/jobpost/JobPost" Icon="@Icons.Material.Filled.AddBox">Job Post</MudNavLink>
        <MudNavLink Href="/Candidate/Candidate" Icon="@Icons.Material.Filled.PersonSearch">Candidates</MudNavLink>
        <MudNavLink Href="/Candidate/AcceptedCandidates" Icon="@Icons.Material.Filled.HowToReg">Accepted Candidates</MudNavLink>
        <MudNavLink Href="/interview/initial" Icon="@Icons.Material.Filled.EventNote">Interviews</MudNavLink>
@*         <MudNavGroup Title="Interview Management" Icon="@Icons.Material.Filled.EventNote" Dense="true" Expanded="false">
            <MudNavLink Href="/interview/initial" Icon="@Icons.Material.Filled.PersonAdd">Initial Interview</MudNavLink>
            <MudNavLink Href="/interview/technical" Icon="@Icons.Material.Filled.Engineering">Technical Interview</MudNavLink>
            <MudNavLink Href="/interview/final" Icon="@Icons.Material.Filled.ThumbUp">Final Interview</MudNavLink>
        </MudNavGroup> *@
        <MudNavLink Href="/audit/auditlog" Icon="@Icons.Material.Filled.HowToReg">Audit Log</MudNavLink>

         @if (isEmployer)
    {
        <MudNavLink Href="/HumanResource/Recruiter" Icon="@Icons.Material.Filled.People">HR Management</MudNavLink>
    }
    </MudNavMenu>
</MudDrawer>

@code {
    private bool isEmployer;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        // Check if user has Employer role
        isEmployer = user.IsInRole("Employer");
    }
}
