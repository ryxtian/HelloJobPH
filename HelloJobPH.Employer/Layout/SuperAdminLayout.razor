@inherits LayoutComponentBase

<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>

    <!-- Drawer (Sidebar) -->
    <MudDrawer Elevation="4" Class="mud-drawer" Open="true" Anchor="Anchor.Start" ClipMode="DrawerClipMode.Always">
        <MudDrawerHeader Class="mud-drawer-header">
            <MudText Typo="Typo.h6">HelloJobPH</MudText>
        </MudDrawerHeader>

        <MudNavMenu>
            <MudNavLink Href="/superadmin/dashboard" Icon="@Icons.Material.Filled.Dashboard">Dashboard</MudNavLink>
            <MudNavLink Href="/superadmin/employers" Icon="@Icons.Material.Filled.AddBox">Employer</MudNavLink>
            <MudNavLink Href="/superadmin/Approval" Icon="@Icons.Material.Filled.PersonSearch">For Approval Employer</MudNavLink>
            <MudNavLink Href="/superadmin/Applicants" Icon="@Icons.Material.Filled.PersonSearch">Applicant</MudNavLink>
            <MudNavLink Href="/superadmin/jobposts" Icon="@Icons.Material.Filled.PersonSearch">Job Post</MudNavLink>
        </MudNavMenu>
    </MudDrawer>

    <!-- AppBar -->
    <MudAppBar Color="Color.Primary" Elevation="1">
        <MudText Typo="Typo.h6" Class="ml-3 text-white">Admin Panel</MudText>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Filled.Notifications" Color="Color.Inherit" />
        <MudIconButton Icon="@Icons.Material.Filled.AccountCircle" Color="Color.Inherit" />
    </MudAppBar>

    <!-- Page Content -->
    <MudMainContent>
        <article class="content px-4 py-6">
            @Body
        </article>
    </MudMainContent>

</MudLayout>

<style>
    .mud-drawer {
        background-color: #1E1E2F;
        color: #fff;
    }

    .mud-drawer-header {
        background-color: #25253A;
        font-weight: 600;
    }

    .mud-nav-link {
        color: #dcdcdc !important;
        border-radius: 8px;
        margin: 2px 6px;
        padding: 10px;
        transition: background-color 0.2s ease;
    }

        .mud-nav-link:hover {
            background-color: rgba(255, 255, 255, 0.1);
        }

        .mud-nav-link.active {
            background-color: #3F51B5;
            color: #fff !important;
        }
</style>
