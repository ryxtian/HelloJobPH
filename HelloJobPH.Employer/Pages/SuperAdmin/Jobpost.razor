@page "/superadmin/jobposts"

@inject NavigationManager NavigationManager
@inject ISnackbar Snackbar
@inject IClientSuperAdminService _service
@layout SuperAdminLayout

<style>
    .page-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border-radius: 16px;
        position: relative;
        overflow: hidden;
    }

        .page-header::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -10%;
            width: 400px;
            height: 400px;
            background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
        }

    .job-card {
        transition: all 0.3s ease;
        border-radius: 12px;
        border-left: 4px solid #667eea;
    }

        .job-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 16px rgba(0,0,0,0.1) !important;
        }

        .job-card.blocked {
            border-left-color: #f56565;
            opacity: 0.7;
        }

    .status-badge {
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 0.75rem;
        font-weight: 600;
    }

    .status-active {
        background: rgba(72, 187, 120, 0.15);
        color: #48bb78;
    }

    .status-blocked {
        background: rgba(245, 101, 101, 0.15);
        color: #f56565;
    }

    .company-avatar {
        width: 48px;
        height: 48px;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 700;
        font-size: 1.2rem;
    }
</style>

<!-- Page Header -->
<MudPaper Class="page-header pa-6 mb-6" Elevation="0">
    <MudStack Row="true" Justify="Justify.SpaceBetween" AlignItems="AlignItems.Center" Style="position: relative; z-index: 1;">
        <MudStack Spacing="1">
            <MudText Typo="Typo.h4" Style="font-weight: 700;">Job Posts Management</MudText>
            <MudText Typo="Typo.body1" Style="opacity: 0.9;">Monitor and manage all job postings across the platform</MudText>
        </MudStack>
    </MudStack>
</MudPaper>

<MudContainer MaxWidth="MaxWidth.ExtraExtraLarge" Class="pa-0">
    <!-- Stats -->
    <MudGrid Spacing="3" Class="mb-4">
        <MudItem xs="12" sm="6" md="3">
            <MudPaper Elevation="2" Class="pa-4">
                <MudStack Row="true" Justify="Justify.SpaceBetween" AlignItems="AlignItems.Center">
                    <MudStack Spacing="1">
                        <MudText Typo="Typo.body2" Color="Color.Secondary">Total Posts</MudText>
                        <MudText Typo="Typo.h4" Style="font-weight: 700;">@jobPosts.Count</MudText>
                    </MudStack>
                    <MudIcon Icon="@Icons.Material.Filled.Work" Color="Color.Primary" Size="Size.Large" />
                </MudStack>
            </MudPaper>
        </MudItem>
    </MudGrid>

    <!-- Search -->
    <MudPaper Elevation="2" Class="pa-4 mb-4">
        <MudTextField @bind-Value="searchQuery"
                      Placeholder="Search by job title, company, or location..."
                      Adornment="Adornment.Start"
                      AdornmentIcon="@Icons.Material.Filled.Search"
                      Variant="Variant.Outlined"
                      Immediate="true"
                      OnDebounceIntervalElapsed="FilterJobs"
                      DebounceInterval="300" />
    </MudPaper>

    <!-- Job Cards -->
    <MudGrid Spacing="3">
        @foreach (var job in filteredJobPosts)
        {
            var status = job.IsDeleted == 1 ? "Blocked" : "Active";
            <MudItem xs="12">
                <MudPaper Elevation="2" Class="@($"job-card pa-4 {(status == "Blocked" ? "blocked" : "")}")">
                    <MudGrid Spacing="3">
                        <MudItem xs="12" md="8">
                            <MudStack Row="true" Spacing="3">
                                <div class="company-avatar" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white;">
                                    @job.CompanyName.Substring(0, 1)
                                </div>
                                <MudStack Spacing="1" Style="flex: 1;">
                                    <MudStack Row="true" Spacing="2" AlignItems="AlignItems.Center">
                                        <MudText Typo="Typo.h6" Style="font-weight: 600;">@job.Title</MudText>
                                        <span class="@($"status-badge status-{status.ToLower()}")">@status</span>
                                    </MudStack>
                                    <MudText Typo="Typo.body2" Color="Color.Primary">@job.CompanyName</MudText>

                                    <MudStack Row="true" Spacing="3" Class="mt-2">
                                        <MudStack Row="true" Spacing="1" AlignItems="AlignItems.Center">
                                            <MudIcon Icon="@Icons.Material.Filled.LocationOn" Size="Size.Small" Color="Color.Secondary" />
                                            <MudText Typo="Typo.body2" Color="Color.Secondary">@job.Location</MudText>
                                        </MudStack>
                                        <MudStack Row="true" Spacing="1" AlignItems="AlignItems.Center">
                                            <MudIcon Icon="@Icons.Material.Filled.Work" Size="Size.Small" Color="Color.Secondary" />
                                            <MudText Typo="Typo.body2" Color="Color.Secondary">@job.EmploymentType.ToString()</MudText>
                                        </MudStack>
                                    </MudStack>

                                    <MudText Typo="Typo.caption" Color="Color.Secondary" Class="mt-2">
                                        Posted: @job.PostedDate.ToString("MMM dd, yyyy")
                                    </MudText>
                                </MudStack>
                            </MudStack>
                        </MudItem>

                        <MudItem xs="12" md="4">
                            <MudStack Row="true" Spacing="2" Style="width: 100%;" Justify="Justify.FlexEnd">
                                <MudButton Variant="Variant.Outlined"
                                           Color="Color.Primary"
                                           StartIcon="@Icons.Material.Filled.Visibility"
                                           Size="Size.Small"
                                           OnClick="@(() => ViewJobDetails(job.JobPostingId))">
                                    View
                                </MudButton>

                                @if (status == "Active")
                                {
                                    <MudButton Variant="Variant.Filled"
                                               Color="Color.Error"
                                               StartIcon="@Icons.Material.Filled.Block"
                                               Size="Size.Small"
                                               OnClick="@(() => BlockJobPost(job))">
                                        Block
                                    </MudButton>
                                }
                                else
                                {
                                    <MudButton Variant="Variant.Filled"
                                               Color="Color.Success"
                                               StartIcon="@Icons.Material.Filled.CheckCircle"
                                               Size="Size.Small"
                                               OnClick="@(() => UnblockJobPost(job))">
                                        Unblock
                                    </MudButton>
                                }
                            </MudStack>
                        </MudItem>
                    </MudGrid>
                </MudPaper>
            </MudItem>
        }

        @if (!filteredJobPosts.Any())
        {
            <MudItem xs="12">
                <MudPaper Elevation="0" Class="pa-8" Style="text-align: center;">
                    <MudIcon Icon="@Icons.Material.Filled.SearchOff" Size="Size.Large" Color="Color.Secondary" Style="font-size: 64px;" />
                    <MudText Typo="Typo.h6" Color="Color.Secondary" Class="mt-4">No job posts found</MudText>
                    <MudText Typo="Typo.body2" Color="Color.Secondary">Try adjusting your search query</MudText>
                </MudPaper>
            </MudItem>
        }
    </MudGrid>
</MudContainer>

@code {
    private List<JobPostingListDtos> jobPosts = new();
    private List<JobPostingListDtos> filteredJobPosts = new();
    private string searchQuery = "";

    protected override async Task OnInitializedAsync()
    {
       
        Console.WriteLine(jobPosts);
        await LoadJobPosts();
    }

    private async Task LoadJobPosts()
    {
        jobPosts = await _service.JobPostList();
        FilterJobs();
    }

    private void FilterJobs()
    {
        filteredJobPosts = jobPosts;

        // Search filter only
        if (!string.IsNullOrWhiteSpace(searchQuery))
        {
            var q = searchQuery.ToLower();
            filteredJobPosts = filteredJobPosts.Where(j =>
                j.Title.ToLower().Contains(q) ||
                j.CompanyName.ToLower().Contains(q) ||
                j.Location.ToLower().Contains(q)
            ).ToList();
        }
    }

    private async Task BlockJobPost(JobPostingListDtos job)
    {
        job.IsDeleted = 1;
        Snackbar.Add($"Job '{job.Title}' has been blocked.", Severity.Warning);
        await Task.Delay(300);
        FilterJobs();
    }

    private async Task UnblockJobPost(JobPostingListDtos job)
    {
        job.IsDeleted = 0;
        Snackbar.Add($"Job '{job.Title}' has been unblocked.", Severity.Success);
        await Task.Delay(300);
        FilterJobs();
    }

    private void ViewJobDetails(int jobId)
    {
        NavigationManager.NavigateTo($"/superadmin/jobposts/{jobId}");
    }
}
