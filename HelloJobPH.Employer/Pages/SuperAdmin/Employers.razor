<style>
    .page-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border-radius: 16px;
    }

    .employer-card {
        transition: all 0.3s ease;
        border-radius: 12px;
        border: 1px solid rgba(0,0,0,0.08);
    }

    .employer-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 16px rgba(0,0,0,0.1) !important;
    }

    .search-bar {
        border-radius: 50px;
    }

    .status-badge {
        padding: 6px 14px;
        border-radius: 20px;
        font-size: 0.75rem;
        font-weight: 600;
    }

    .status-active {
        background: rgba(72, 187, 120, 0.15);
        color: #48bb78;
    }

    .status-inactive {
        background: rgba(203, 213, 224, 0.5);
        color: #718096;
    }

    .status-pending {
        background: rgba(237, 137, 54, 0.15);
        color: #ed8936;
    }
</style>

