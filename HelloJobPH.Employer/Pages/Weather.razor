@page "/weather"
@using MudBlazor

<PageTitle>Interview Management</PageTitle>

<MudText Typo="Typo.h4" GutterBottom="true">Interview Management</MudText>
<MudText Typo="Typo.subtitle1" GutterBottom="true">List of scheduled interviews.</MudText>

<MudTable Items="@interviews" Hover="true" Bordered="true" Striped="true">
    <HeaderContent>
        <MudTh>Candidate Name</MudTh>
        <MudTh>Position</MudTh>
        <MudTh>Interviewer</MudTh>
        <MudTh>Date</MudTh>
        <MudTh>Time</MudTh>
        <MudTh>Status</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Candidate Name">@context.CandidateName</MudTd>
        <MudTd DataLabel="Position">@context.Position</MudTd>
        <MudTd DataLabel="Interviewer">@context.Interviewer</MudTd>
        <MudTd DataLabel="Date">@context.Date.ToShortDateString()</MudTd>
        <MudTd DataLabel="Time">@context.Time</MudTd>
        <MudTd DataLabel="Status">
            @switch (context.Status)
            {
                case "Pending":
                    <MudBadge Color="Color.Warning">@context.Status</MudBadge>
                    break;
                case "Completed":
                    <MudBadge Color="Color.Success">@context.Status</MudBadge>
                    break;
                case "Cancelled":
                    <MudBadge Color="Color.Error">@context.Status</MudBadge>
                    break;
            }
        </MudTd>
    </RowTemplate>
</MudTable>

@code {
    private List<Interview> interviews = new List<Interview>
    {
        new Interview { CandidateName="John Doe", Position="Software Developer", Interviewer="Alice Smith", Date=DateTime.Today.AddDays(1), Time="10:00 AM", Status="Pending" },
        new Interview { CandidateName="Jane Roe", Position="QA Tester", Interviewer="Bob Johnson", Date=DateTime.Today.AddDays(2), Time="2:00 PM", Status="Completed" },
        new Interview { CandidateName="Mark Spencer", Position="UI/UX Designer", Interviewer="Alice Smith", Date=DateTime.Today.AddDays(3), Time="11:00 AM", Status="Pending" },
        new Interview { CandidateName="Lucy Brown", Position="Project Manager", Interviewer="Charlie Lee", Date=DateTime.Today.AddDays(1), Time="3:00 PM", Status="Cancelled" },
    };

    public class Interview
    {
        public string CandidateName { get; set; } = string.Empty;
        public string Position { get; set; } = string.Empty;
        public string Interviewer { get; set; } = string.Empty;
        public DateTime Date { get; set; }
        public string Time { get; set; } = string.Empty;
        public string Status { get; set; } = "Pending";
    }
}
