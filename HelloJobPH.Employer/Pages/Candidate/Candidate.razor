                            <MudChip T="string" Size="Size.Small" Variant="Variant.Filled" Color="Color.Info">
                                @context.Item.Status
                            </MudChip>
                        </CellTemplate>
                    </PropertyColumn>

                    <!-- Resume -->
                    <TemplateColumn Title="Resume" Sortable="false" Filterable="false">
                        <CellTemplate>
